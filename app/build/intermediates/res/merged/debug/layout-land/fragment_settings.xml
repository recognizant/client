<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.android.gms.samples.vision.ocrreader.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Options"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/textViewSize"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:text="Camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecvRecordings"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/marginTop"/>

        <Button
            android:text="Gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnEmergencyNotify"
            android:layout_marginTop="@dimen/marginTop"/>

        <Button
            android:text="Cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettingsWtchOverMe"
            android:layout_marginTop="@dimen/marginTop"/>



    </LinearLayout>

</FrameLayout>
